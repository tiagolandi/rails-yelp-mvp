<div class="container">
  <h1>Create a new review for <%= @restaurant.name %></h1>

  <%= simple_form_for [@restaurant, @review] do |f|%>

    <%= f.input :content %>
    <%= f.input :rating, collection: 0..5, prompt: "Select your rating" %>
    <%= f.button :submit, class: 'btn btn-outline-dark' %>

  <% end %>

  <%= link_to 'Back to Homepage', restaurants_path, class: 'btn btn-outline-dark' %>
</div>
