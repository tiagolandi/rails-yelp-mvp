<div class="container">
  <h1>New Restaurant</h1>

  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :name, placeholder: "Restaurant's name" %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"], prompt: "Select a category" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-outline-primary' %>
    </div>
  <% end %>

  <%= link_to 'Back', restaurants_path, class: 'btn btn-outline-dark' %>
</div>
