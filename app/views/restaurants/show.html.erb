<div class="container">
  <p></p>
  <p>
    <strong>Name:</strong>
    <%= @restaurant.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @restaurant.address %>
  </p>

  <p>
    <strong>Phone Number:</strong>
    <%= @restaurant.phone_number %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @restaurant.category %>
  </p>

  <p>
    <%= link_to 'Add a Review', new_restaurant_review_path(@restaurant), class: 'btn btn-outline-dark' %>
  </p>

  <% if @restaurant.reviews.count.zero? %>
    <p>
      Be the first to leave a review

    </p>
  <% else %>

    <ul>
      <% @restaurant.reviews.each do |review| %>
        <li>
          <p><strong>Review: </strong><%= review.content %></p>
          <p> <strong>&nbsp&nbsp&nbsp&nbsp Rating: </strong><%= review.rating %></p>
          <hr>
        </li>
      <% end %>
    </ul>

  <% end %>


  <%= link_to 'Back', restaurants_path, class: 'btn btn-outline-dark' %>
</div>
